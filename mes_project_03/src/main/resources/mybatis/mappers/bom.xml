<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.gaw.dao.BOMDAO">
    <select id="selectBomByPage" parameterType="kr.or.gaw.dto.BomDTO" resultType="kr.or.gaw.dto.BomDTO">
        SELECT * FROM (
            SELECT rownum rnum, bom_id, product_id, material_id, quantity, version, create_at
            FROM bom
        )
        WHERE rnum &gt;= #{page} AND rnum &lt;= #{countperpage}
    </select>
    
    <select id="getTotalDataCount" parameterType="kr.or.gaw.dto.BomDTO" resultType="int">
    	select count(bom_id) from bom
    </select>
</mapper>
