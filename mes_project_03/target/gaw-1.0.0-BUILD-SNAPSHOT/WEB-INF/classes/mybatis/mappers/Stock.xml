<mapper namespace="kr.or.gaw.dao.StockDAO">

	<select id="selectStock" resultType="StockMoveDTO">
		select * from stockmove
	</select>
	
	<delete id="deleteStock" parameterType="StockMoveDTO">
		DELETE FROM stockmove
			where move_id = #{move_id}
	</delete>
	
