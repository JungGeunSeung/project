<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<!--     무조건 DAO가 위치한 패키지로 namespace 해야하는가? -->
<mapper namespace="kr.or.gaw.dao.BomDAO">

		<select id="selectBomByPage" resultType="kr.or.gaw.dto.BomDTO" parameterType="map">
		    SELECT * FROM (
		        SELECT A.*, ROW_NUMBER() OVER (ORDER BY bom_id) AS rnum
		        FROM bom A
		    )
		    WHERE rnum BETWEEN #{offset} + 1 AND #{offset} + #{pageSize}
		</select>
		<select id="getBomCount" resultType="int">
		SELECT COUNT(*) FROM bom;
	    </select>
</mapper>
